<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitspilani.inventorytrackerjava">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/images2"
        android:label="Track and Trigger"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InventoryTrackerJava">
        <activity
            android:name=".Category.EditCategory"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Category.categoryDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawingFeature.DrawingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Category.category_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Category.AddCategory"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".auth.PhoneLogin" />
        <activity android:name=".auth.Register" />
        <activity
            android:name=".Note.EditNote"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Note.AddNote"
            android:label="@string/title_activity_add_note"
            android:theme="@style/Theme.InventoryTrackerJava.NoActionBar" />
        <activity
            android:name=".Note.NoteDetails"
            android:label="@string/title_activity_note_details"
            android:theme="@style/Theme.InventoryTrackerJava.NoActionBar" />
        <activity
            android:name=".dashboard"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ReminderBroadcast" />
    </application>

</manifest>